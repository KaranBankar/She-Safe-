<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="750dp"
            android:layout_height="350dp"
            android:layout_marginLeft="-300dp"
            android:layout_marginTop="-100dp"
            android:src="@drawable/loginshape" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="REGISTER"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:textColor="@color/hotpink"/>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_15sdp"
            app:cardCornerRadius="@dimen/_15sdp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="@dimen/_30sdp"
            android:layout_marginRight="@dimen/_30sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_sig_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:drawableLeft="@drawable/user"
                    android:fontFamily="sans-serif-black"
                    android:hint="  Enter Your Name"
                    android:inputType="text"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginTop="10dp"
                    android:textStyle="normal|bold" />


                <EditText
                    android:id="@+id/et_sig_pass"
                    android:layout_width="@dimen/_245sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:drawableLeft="@drawable/password"
                    android:fontFamily="sans-serif-black"
                    android:hint="  Enter Password"
                    android:inputType="textPassword"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="normal|bold" />

                <EditText
                    android:id="@+id/et_sig_con_pass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:drawableLeft="@drawable/password"
                    android:fontFamily="sans-serif-black"
                    android:hint="  Confirm Password"
                    android:inputType="textPassword"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="normal|bold" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:id="@+id/et_sig_mobile_no"
                    android:drawableLeft="@drawable/mobile"
                    android:hint="  Mobile No"
                    android:inputType="number"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold|normal" />

                <EditText
                    android:id="@+id/et_sig_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:drawableLeft="@drawable/email"
                    android:hint="  Enter Email"
                    android:inputType="text"
                    android:textColorHint="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold|normal" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="SIGN UP"
                    android:textColor="@color/white"
                    android:id="@+id/btn_signup2"
                    android:backgroundTint="@color/hotpink"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:textSize="@dimen/_12sdp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</ScrollView>